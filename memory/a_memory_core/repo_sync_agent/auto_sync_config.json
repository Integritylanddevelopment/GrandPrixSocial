{
  "auto_sync_settings": {
    "enabled": true,
    "sync_threshold": {
      "files_changed": 1,
      "minutes_elapsed": 1,
      "significant_changes": false
    },
    "commit_triggers": [
      "UI components updated",
      "Database schema changes", 
      "New features added",
      "Bug fixes implemented",
      "Configuration changes"
    ],
    "auto_commit_patterns": {
      "feature_updates": "Feature: {description}",
      "bug_fixes": "Fix: {description}",
      "ui_updates": "UI: {description}",
      "config_changes": "Config: {description}",
      "general": "Update: {description}"
    },
    "commit_attribution": {
      "include_claude_attribution": false,
      "co_author": ""
    },
    "deployment_integration": {
      "vercel_auto_deploy": true,
      "post_push_webhook": true,
      "notify_on_deploy": true
    },
    "exclude_patterns": [
      "memory/**",
      "*.log",
      ".env*",
      "node_modules/**",
      ".next/**"
    ]
  }
}